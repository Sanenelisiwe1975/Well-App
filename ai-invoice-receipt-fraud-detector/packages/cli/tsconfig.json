{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "@fraud-detector/core": ["../core/src"],
      "@fraud-detector/types": ["../types/src"],
      "@fraud-detector/models": ["../models/src"]
    }
  },
  "include": ["src"],
  "references": [
    { "path": "../core" },
    { "path": "../types" },
    { "path": "../models" }
  ]
}
